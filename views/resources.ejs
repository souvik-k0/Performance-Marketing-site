<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resources & Case Studies | BrandBiography</title>
    <meta name="description"
        content="Explore case studies and blog posts from BrandBiography â€” real results, expert insights, and actionable strategies for eCommerce advertising.">
    <meta name="keywords"
        content="eCommerce case studies, performance marketing blog, ROAS optimization, Meta ads, Google ads, D2C marketing">
    <meta name="author" content="BrandBiography">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://brandbiography.com/resources">

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Resources & Case Studies | BrandBiography">
    <meta property="og:description" content="Real results and expert insights for scaling eCommerce ads profitably.">
    <meta property="og:url" content="https://brandbiography.com/resources">
    <meta property="og:site_name" content="BrandBiography">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Resources & Case Studies | BrandBiography">
    <meta name="twitter:description" content="Real results and expert insights for scaling eCommerce ads profitably.">

    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“–</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700;800&display=swap"
        rel="stylesheet">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="stylesheet" href="/styles.css">

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        "name": "Resources & Case Studies",
        "description": "Expert case studies and blog posts to help your brand conquer Meta, Google, and Amazon advertising.",
        "url": "https://brandbiography.com/resources",
        "publisher": {
            "@type": "Organization",
            "name": "BrandBiography",
            "url": "https://brandbiography.com"
        },
        "mainEntity": {
            "@type": "ItemList",
            "numberOfItems": <%= resources.length %>,
            "itemListElement": [
                <% resources.forEach((r, i) => { %>
                {
                    "@type": "ListItem",
                    "position": <%= i + 1 %>,
                    "item": {
                        "@type": "<%= r.type === 'case-study' ? 'Article' : 'BlogPosting' %>",
                        "headline": "<%= r.title.replace(/"/g, '\\"') %>",
                        "description": "<%= r.description.replace(/"/g, '\\"') %>",
                        "datePublished": "<%= r.createdAt %>",
                        "publisher": { "@type": "Organization", "name": "BrandBiography" }
                    }
                }<%= i < resources.length - 1 ? ',' : '' %>
                <% }) %>
            ]
        }
    }
    </script>
</head>

<body>
    <div class="bg-mesh">
        <div class="mesh-blob blob-1"></div>
        <div class="mesh-blob blob-2"></div>
    </div>

    <nav class="navbar" id="navbar">
        <div class="container nav-content">
            <a href="/" class="logo"><i class="ph-fill ph-book-open-text"></i><span>BrandBiography</span></a>
            <div class="nav-links">
                <a href="/#solutions">Solutions</a>
                <a href="/pricing.html">Pricing</a>
                <a href="/resources" class="active-page">Resources</a>
                <a href="/about.html">About Us</a>
            </div>
            <a href="/#demo" class="btn btn-primary btn-glow nav-cta">Book a Demo</a>
            <button class="mobile-menu-btn" id="menu-toggle" aria-label="Toggle menu"><i
                    class="ph ph-list"></i></button>
        </div>
        <div class="mobile-drawer" id="mobile-drawer">
            <a href="/#solutions" class="drawer-link">Solutions</a>
            <a href="/pricing.html" class="drawer-link">Pricing</a>
            <a href="/resources" class="drawer-link">Resources</a>
            <a href="/about.html" class="drawer-link">About Us</a>
            <a href="/#demo" class="btn btn-primary btn-full drawer-cta">Book a Demo</a>
        </div>
    </nav>

    <!-- Header -->
    <header class="resources-hero container reveal">
        <div class="badge"><span class="badge-dot"></span> Case Studies & Blogs</div>
        <h1 class="display-heading"><span class="gradient-text">Resources</span> & Insights</h1>
        <p>Expert case studies and blog posts to help your brand conquer Meta, Google, and Amazon advertising.</p>
        <div class="filter-bar" id="filter-bar">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="case-study">Case Studies</button>
            <button class="filter-btn" data-filter="blog">Blogs</button>
        </div>
    </header>

    <!-- Resources Grid â€” Server-side rendered for SEO -->
    <section class="container">
        <% if (resources.length===0) { %>
            <div style="text-align:center; padding:4rem 0; color:#94a3b8;">
                <i class="ph-duotone ph-files" style="font-size:3rem"></i>
                <p style="margin-top:1rem;">No resources available yet. Check back soon!</p>
            </div>
            <% } else { %>
                <div class="resources-grid reveal" id="resources-grid">
                    <% resources.forEach(r=> { %>
                        <article class="resource-card" data-type="<%= r.type %>">
                            <div class="resource-img-placeholder">
                                <% if (r.imageUrl) { %>
                                    <img src="<%= r.imageUrl %>" alt="<%= r.title %>" loading="lazy" width="400"
                                        height="180" style="width:100%;height:100%;object-fit:cover">
                                    <% } else { %>
                                        <i
                                            class="ph-duotone <%= r.type === 'case-study' ? 'ph-trend-up' : 'ph-pencil-line' %>"></i>
                                        <% } %>
                            </div>
                            <div class="resource-content">
                                <span class="resource-tag">
                                    <%= r.type==='case-study' ? 'Case Study' : 'Blog' %>
                                </span>
                                <h3>
                                    <%= r.title %>
                                </h3>
                                <p>
                                    <%= r.description %>
                                </p>
                                <a href="<%= r.link ? r.link : '/resources/' + (r.slug || '#') %>" class="read-more">
                                    <%= r.type==='case-study' ? 'Read Story' : 'Read Article' %>
                                        <i class="ph ph-arrow-right"></i>
                                </a>
                            </div>
                        </article>
                        <% }) %>
                </div>
                <% } %>
    </section>

    <footer class="footer">
        <div class="container footer-bottom">
            <div class="footer-brand">
                <a href="/" class="logo"><i class="ph-fill ph-book-open-text"></i><span>BrandBiography</span></a>
                <p>&copy; 2026 BrandBiography. All rights reserved.</p>
            </div>
            <div class="social-links">
                <a href="#" aria-label="Instagram"><i class="ph-fill ph-instagram-logo"></i></a>
                <a href="#" aria-label="LinkedIn"><i class="ph-fill ph-linkedin-logo"></i></a>
                <a href="#" aria-label="YouTube"><i class="ph-fill ph-youtube-logo"></i></a>
            </div>
        </div>
    </footer>

    <script src="/script.js"></script>
    <script>
        // Client-side filter (works on already-rendered HTML)
        document.getElementById('filter-bar').addEventListener('click', e => {
            const btn = e.target.closest('.filter-btn');
            if (!btn) return;
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            const filter = btn.dataset.filter;
            document.querySelectorAll('.resource-card').forEach(card => {
                card.style.display = (filter === 'all' || card.dataset.type === filter) ? '' : 'none';
            });
        });
    </script>
</body>

</html>